generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name            String
  email           String    @unique
  freeTrailPeriod DateTime  @default(now())
  password        String
  websites        Website[]
}

